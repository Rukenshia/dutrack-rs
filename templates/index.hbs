{{> partials/header title=statusCode }}
{{> partials/navbar }}
<div class="container">
  <h1>Logged in as {{user.email}}</h1>
  <h3>Today</h3>
  {{#if workday}}
    <h4>{{workday.date}}</h4>
    <div id="workday_stamps"></div>
  {{else}}
    <em>You haven't checked in today.</em>
  {{/if}}
  <h3>Stamps <small>id: <code>{{user.fence_id}}</code></small></h3>
  {{#each stamps}}
    <div>
      <h4>{{event}}</h4>
      {{{time}}}
    </div>
  {{/each}}
</div>
<script type="text/javascript">
  window.STAMPS = {
    today: []
  };

  {{#each workday.stamps}}window.STAMPS.today.push("{{this}}");{{/each}}
</script>
{{> partials/footer js=["ajax.js", "moment.js", "workday.js"] }}